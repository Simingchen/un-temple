.panel{
    padding:0 30rpx;
    overflow: hidden;
}
.user-top{
    height:290rpx;
    padding-top:32rpx;
    text-align: center;
    color:#fff;
}
.avactor-box{
    height:184rpx;
}
.user-top .avactor{
    width:184rpx;
    height:184rpx;
    border-radius: 184rpx;
    background: #999;
}
.user-top .txt-line{
    line-height: 74rpx;
    color:#999;
}
.line-item{
    padding-left:30rpx;
    padding-right:65rpx;
    color:#666;
    line-height: 116rpx;
    font-size: 30rpx;
    border-bottom:1rpx solid #e9e9e9;
}
.line-item:last-child{
    border-bottom:0;
}
.line-item.arrow{
    position:relative;
}
.line-item.arrow:before{
     position:absolute; 
    content:"";
    right:33rpx;
    top:50%;
    width:15rpx;
    height:15rpx;
    border-top:3rpx solid #666;
    border-right:3rpx solid #666;
    transform: rotate(45deg) translate(-50%);
}
.line-item .lab{
    float:left;
    line-height: 116rpx;
    height: 116rpx;
    color:#000;
}
.save-btn{
    width: 710rpx;
    margin:100rpx auto;
    text-align: center;
    height:92rpx;
    line-height: 92rpx;
    font-size: 32rpx;
}