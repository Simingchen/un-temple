.input-row {
    padding:20rpx 0 20rpx 135rpx;
    border-bottom: 1px solid #e9e9e9;
    color: #6c6c6c;
    font-size: 26rpx;
}
.row1{
    background-image: url(data:image/png;base64,);
    background-size: 29rpx 44rpx;
    background-repeat: no-repeat;
    background-position: 34rpx 28rpx;
}
.row2{
    background-image: url(data:image/png;base64,);
    background-size: 38rpx 44rpx;
    background-repeat: no-repeat;
    background-position: 34rpx 28rpx;
}
.input-row:last-child{
    border:0;
}
.input{
    height:80rpx;
    line-height:80rpx;
    font-size: 34rpx;
}
.login-form{
    padding:30rpx;
    margin-bottom:100rpx;
}
.login_btn{
    width:710rpx;
    height:95rpx;
    margin:0 auto;
    padding:0 50rpx;
    line-height:95rpx;
    font-size: 26rpx;
    color:#fff;
    background:#c7a769;
}
.bot{
    width:600rpx;
    padding:0 17rpx;
    font-size: 26rpx;
    margin:0 auto;
    box-sizing: border-box;
}

.sendcode{
    color:#c7a769;
    height:80rpx;
    padding:0 40rpx;
    line-height:80rpx;
    border-left:1px solid #e9e9e9;
    font-size: 34rpx;
}