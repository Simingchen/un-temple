.panel{
    padding:30rpx;
}
.line-item{
    padding-top:10rpx;
    background: #fff;
    line-height: 64rpx;
    font-size: 34rpx;
    margin-bottom:-10rpx;
}
.line-item.arrow{
    position:relative;
}
.line-item.arrow:before{
     position:absolute; 
    content:"";
    right:0rpx;
    top:50%;
    width:15rpx;
    height:15rpx;
    border-top:3rpx solid #666;
    border-right:3rpx solid #666;
    transform: rotate(45deg) translate(-50%);
}
.goods-box .title{
    line-height: 80rpx;
    margin-top:-25rpx;
    font-size: 32rpx;
}
.goods-box .img{
    width:200rpx;
    height:200rpx;
    margin-right: 30rpx;
    border-radius: 6rpx;
}
.goods-box .name{
    line-height: 56rpx;
    font-size: 34rpx;
}
.goods-box .num{
    line-height: 56rpx;
    color:#999;
}
.goods-box .price{
    color:#803437;
}
.tips{
    color:#bd151d;
}
.footer{
    position: fixed;
    width:100%;
    bottom:0;
    height: 100rpx;
    font-size: 36rpx;
    line-height: 100rpx;
    color: #fff;
}
.footer .b1{
    font-size: 30rpx;
    padding-left:30rpx;
    color:#2c3e50;
    background: #fff;
}
.footer .b2{
    width:340rpx;
    text-align: center;
    background: #bd151d;
}
.footer .total{
    margin-left:25rpx;
    font-size: 32rpx;
    font-weight: 600;
    color:#bd151d;
}